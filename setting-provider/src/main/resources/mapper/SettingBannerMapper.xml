<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qcdl.model.mapper.SettingBannerMapper">
    <resultMap id="BaseResultMap" type="com.qcdl.model.entity.SettingBanner">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="picture" jdbcType="VARCHAR" property="picture"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="position" jdbcType="INTEGER" property="position"/>
        <result column="weight" jdbcType="INTEGER" property="weight"/>
        <result column="admin_id" jdbcType="INTEGER" property="adminId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="version" jdbcType="INTEGER" property="version"/>
        <result column="deleted" jdbcType="INTEGER" property="deleted"/>
    </resultMap>

    <resultMap id="bannerParamMap" type="com.qcdl.rest.param.BannerParam">
        <result column="position" jdbcType="INTEGER" property="position"/>
    </resultMap>

    <select id="bannerList" resultMap="bannerParamMap">
        SELECT `name`,picture,url,position,weight
        FROM setting_banner
        WHERE deleted = 0
        <if test="position &gt; 0">
            AND position = #{position,jdbcType=INTEGER}
        </if>
        ORDER BY weight ASC
    </select>
</mapper>